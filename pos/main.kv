                    background_normal: ''
                    text: "Settings"
                    font_size: 10
                    size_hint: 0.1, 1
                Label:
                    id: my_custom_label
                    font_size: '18sp'
                    color: 0.1,0.1,0.1,1
                    text: ''
                    size_hint: 0.3, 1
                Label:
