#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton

ScreenManagement:
    transition: FadeTransition()
    MainScreen:
    POSScreen:
    PaymentScreen:
    CustomerScreen:

<MainScreen>:
    name: "main"
    canvas.before:
        Color:
            rgba: 0.99, 0.99, 0.99, 1
        Rectangle:
            pos: self.pos
            size: self.size
    TextInput:
        id: main_username
        text: 'admin'
        font_size: '48sp'
        write_tab: False
        multiline: False
        on_text_validate: app.root.current = "posscreen"
        size_hint: .6, .15
        pos: (root.right - self.width) / 2, ((root.top - self.height) / 2) + self.height + 20
    TextInput:
        id: main_password
        password: True
        text: 'admin'
        font_size: '48sp'
        write_tab: False
        multiline: False
        on_text_validate: app.root.current = "posscreen"
        size_hint: .6, .15
        pos: (root.right - self.width) / 2, ((root.top - self.height) / 2)
    Button:
        on_release: app.root.current = "posscreen"
        background_color: (0.415, 0.651, 0.259, 1.0)
        background_normal: ''
        text: "Start session"
        font_size: '48sp'
        size_hint: .6, .15
        pos: (root.right - self.width) / 2, ((root.top - self.height) / 2) - self.height - 20

<PaymentScreen>:
