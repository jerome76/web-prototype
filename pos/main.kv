<CustomerScreen>:
    label_wid: main_customer
    customer_list_wid: my_customer_scroll_view

    name: "customerscreen"
    canvas.before:
        Color:
            rgba: 0.99, 0.99, 0.99, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0
        BoxLayout:
            canvas:
                Color:
                    rgb: 0.2,0.2,0.2
                Rectangle:
                    pos: self.pos
                    size: self.size
            id: customer_boxlayout
            cols: 3
            padding: 0
            spacing: 3
            size_hint: 1, 0.1
            Button:
                on_release: app.root.current = "posscreen"
                text: "Set"
                background_color: (0.415, 0.651, 0.259, 1.0)
                background_normal: ''
                text: "Back"
                font_size: '18sp'
                size_hint: 0.1, 1
            Label:
                text: ''
                background_color: (0.9, 0.9, 0.9, 1.0)
                background_normal: ''
                id: main_customer
                color: (0.99, 0.99, 0.99, 1.0)
                font_size: '18sp'
                size_hint: .8, 1
            Button:
                on_release: app.root.current = "posscreen"
                text: "Back"
                background_color: (0.415, 0.651, 0.259, 1.0)
                background_normal: ''
                text: "Set"
                font_size: '18sp'
                size_hint: 0.1, 1

        ScrollView:
            text: 'Customers'
            size_hint: 1, .9
            GridLayout:
                id: my_customer_scroll_view
                cols: 1
                spacing: 2
                size_hint_y: None

<CustomButton@Button>:
    background_color: 1, 1, 1, 1
    background_normal: ''
    image_source: ''
    font_size: '18sp'
    subtext: ''
    GridLayout:
        background_color: 1, 1, 1, 1
        height: self.parent.height  # match the button's height
        width: self.parent.width    # set to whatever you would like
        pos: self.parent.pos        # match the button's position
        cols: 1
        Image:
            source: root.image_source
            size_hint: 1, 0.8
        Label:
            size_hint: 1, 0.2
            color: 0.2, 0.2, 0.2, 1
            text: root.subtext

<ListItemButton>:
    background_normal: ''
    font_size: '18sp'
    color: 0.1,0.1,0.1,1
    selected_color: 0.85, 0.85, 0.85, 1
    deselected_color: 0.95, 0.95, 0.95, 1
    size_hint: 1,0.1
    on_press: app.root.get_screen('posscreen').selection_change(*args)


<MyTabbedPanel>:
    scroll_view_home_wid: my_home_scroll_view
    grid_layout_home_wid: my_home_grid_layout
    grid_layout_search_wid: my_search_grid_layout
    tabbed_panel_wid: my_tabbed_panel
    tab_home_wid: my_home_tab
    tab_search_wid: my_search_tab
    id: my_tabbed_panel
    canvas:
        Color:
            rgba: (0.8, 0.8, 0.8, 1.0)
        Rectangle:
            size: self.size
            pos: self.pos
    size_hint: 1, 1
    do_default_tab: False
    TabbedPanelItem:
        id: my_home_tab
        color: 1,1,1,1
        font_size: '24sp'
        background_color: (0.81, 0.27, 0.33, 1)
        background_normal: ''
        background_down: ''
        text: 'Home'
        ScrollView:
            id: my_home_scroll_view
            canvas.before:
                Color:
                    rgba: (0.95, 0.95, 0.95, 1.0)
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: 'Product list'
            size_hint: 1, 1
            GridLayout:
                id: my_home_grid_layout
                cols: 4
                spacing: 2
                size_hint_y: None
    TabbedPanelItem:
        id: my_search_tab
        color: 1,1,1,1
        font_size: '24sp'
        background_color: (0.2, 0.2, 0.2, 1)
        background_normal: ''
        text: 'Search'
        ScrollView:
            id: my_search_scroll_view
            canvas.before:
                Color:
                    rgba: (0.95, 0.95, 0.95, 1.0)
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: 'Product search list'
            size_hint: 1, 1
            GridLayout:
                id: my_search_grid_layout
                cols: 4
                spacing: 2
                size_hint_y: None


<POSScreen>:
