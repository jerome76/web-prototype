#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton

ScreenManagement:
    transition: FadeTransition()
    MainScreen:
    POSScreen:
    PaymentScreen:
    CustomerScreen:

<MainScreen>:
    textinput_user_wid: main_username
    name: "main"
    canvas.before:
        Color:
            rgba: 0.99, 0.99, 0.99, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0
        BoxLayout:
            canvas:
                Color:
                    rgb: 0.2,0.2,0.2
                Rectangle:
                    pos: self.pos
                    size: self.size
            id: bl_payment_header
            cols: 3
            padding: 0
            spacing: 1
            size_hint: 1, 0.1
            Label:
                id: main_title
                color: (0.99, 0.99, 0.99, 1.0)
                text: 'Semilimes POS'
                font_size: '48sp'
                size_hint: 1, 1

        GridLayout:
            canvas:
                Color:
                    rgb: 0.99,0.99,0.99
                Rectangle:
                    pos: self.pos
                    size: self.size
            id: main_body
            cols: 1
            padding: 50
            spacing: 10
            TextInput:
                id: main_username
                text: 'admin'
                font_size: '48sp'
                write_tab: False
                multiline: False
                on_text_validate: app.root.current = "posscreen"
                size_hint: 1, 0.25
            TextInput:
                id: main_password
                password: True
                text: 'admin'
                font_size: '48sp'
                write_tab: False
                multiline: False
                on_text_validate: app.root.current = "posscreen"
                size_hint: 1, 0.25
            Button:
                on_release: app.root.current = "posscreen"
                background_color: (0.415, 0.651, 0.259, 1.0)
                background_normal: ''
                text: "Start session"
                font_size: '48sp'
                size_hint: 1, 0.25
            Label:
                id: version_label
                color: (0, 0, 0, 1.0)
                size_hint: 0.5, 0.25
                text: "Â© 2016 Semilimes                Version 0.1"
                font_size: '10sp'
            Widget:
                size_hint: 1, 0.25


